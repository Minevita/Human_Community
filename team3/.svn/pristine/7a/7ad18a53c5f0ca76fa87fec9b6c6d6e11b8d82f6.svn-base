/* --------------- board get table --------------- */
.board_get .form-control {
	background-color: transparent;
}

.board_get .container-fluid{
	width:80%;
	text-align:center;
}

.board_get .container-fluid #bno, #regDate, #replyCnt, #nickname {
	text-align: left;
	border:none;
	border-right:0px; 
	border-top:0px; 
	boder-left:0px; 
	boder-bottom:0px;

}
.board_get .form-group {
	text-align: left;
	display: block;
	width: 100%;
	
}
.board_get .form-group div{
	text-align: right;
	display: inline-block;
	padding: 5px;
}
.board_get .form-group div div{
	text-align: center;
}
.board_get .card .card-header {
	text-align: left;
	background-color: transparent;
	border:none;
}

.board_get .card-body .form-group{
	border-width: 1px;
	border-style: solid;
	background-color: rgb(253, 253, 253);
	border-color: rgb(224, 224, 224);
	margin-bottom: 0;
}

.board_get .card-body #title{
	font-size: 30px;
	border-width: 1px 1px 3px 1px;
	margin-bottom: 0;
}
.board_get .card-body #content{
	width: 100%;
	height: 500px;
	resize: none;
}


.board_get .card #list {
	float:left;
}
.board_get .card #modify {
	float:right;
}
