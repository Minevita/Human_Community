@charset "UTF-8";


/* --------------- board list --------------- */
/* board list 1200px이상일때 */
@media screen and (min-width:1200px) {
	.board_list {
	  position: absolute; 
	  left: 50%; 
	  transform: translate(-50%); 
	  text-align: center;
	  min-width: 1200px;
	}
	.board_list .boardtable th:nth-child(1), th:nth-child(4), th:nth-child(5) {
		max-width: 120px; 
		min-width: 120px;
	}		
	.board_list .boardtable th:nth-child(3), th:nth-child(6) {
		max-width: 140px; 
		min-width: 140px;
	}	
	.board_list .boardtable td:nth-child(1), td:nth-child(4), td:nth-child(5) {
		max-width: 80px; 
		min-width: 80px;
	}		
	.board_list .boardtable td:nth-child(3), td:nth-child(6) {
		max-width: 140px; 
		min-width: 140px;
	}	
	.board_list .boardtable td:nth-child(2) {
		max-width: none;
	}
}

.board_list .container-fluid .card-body #title, #content{
	border: 2px solid #007bff;
}

.board_list .container-fluid .card .row{
	margin: -5px;
}

.board_list .container-fluid .card .row .col-1, .col-3{
	max-width:none ;
	flex: none;
}

.board_list .table div{
	padding: 10px;
}


.board_list .card {
	background-color:transparent;
}
.board_list .boardtable {
  width:100%;
  text-align:center;
}
.board_list .boardtable th { 
	 height:28px; 
	 border-top:2px solid #82C0E4; 
	 background-color:#4876ef; 
	 color: #fff;
	 border-bottom:2px solid #EAEAEA; 
	 text-align:center;
}
.board_list .boardtable td, .table th {
  padding:10px 20px;
  border-top:1px solid #ccc;
  word-break:break-all
}
/* table 제목길이 */
.board_list .boardtable td:nth-child(2) {
	text-align:left;
}
.board_list .boardtable td:nth-child(2) b {
	color: red;
}
.board_list .boardtable--min {
  min-width:800px;
  width:100%;
}
.board_list .continer{
	position: relative;
	width: 100%;
	height: 100%;
}
.board_list .card{
	text-align:center;
}
.board_list .dataTables_length{
	text-align:left;
}
/* 페이지 수 */
.board_list select option:first-child  {
}

/* 너비가 768px 이하일 때 */
@media screen and (max-width:768px) {
	 .board_list #dataTable_filter {
	   width: 312px;
	   margin: 4px 0 0 4px;
	   
	}
}
/* list 768px end */

/* 너비가 560px 이하일 때 */
@media screen and (max-width:560px) {
	.board_list .col-sm-12 #dataTable_filter {
	 	display: inline;
		 width: 150px;
		 margin: 4px 0 0 4px;
	   
	}
/* 너비가 560px 이하일 때 우측 사이드바를 없앰 */
	.board_list .col-sm-12 .boardtable {
	  width:100%;
	  text-align:center;
	}
}
/* list 560px end */

/* --------------- board paging --------------- */

.board_list .paging{
	width:100%;
	position:relative;
	margin-top:18px;
	text-align:center;
	line-height:20px
}
.board_list .paging .dataTables_paginate{
	display: inline-block;
}
	
	
